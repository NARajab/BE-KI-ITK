{
  "name": "project-hki",
  "version": "1.0.0",
  "description": "Backend Web KI-ITK",
  "main": "index.js",
  "scripts": {
    "start": "node -r dotenv/config bin/www",
    "dev": "nodemon -r dotenv/config bin/www",
    "db:drop": "sequelize db:drop",
    "db:create": "sequelize db:create",
    "db:migrate": "sequelize db:migrate",
    "db:seed": "sequelize db:seed:all",
    "db:drop:env": "cross-env NODE_ENV=test sequelize db:drop",
    "db:create:env": "cross-env NODE_ENV=test sequelize db:create",
    "db:migrate:env": "cross-env NODE_ENV=test sequelize db:migrate",
    "db:seed:env": "cross-env NODE_ENV=test sequelize db:seed:all",
    "db:migrate:undo": "sequelize db:migrate:undo:all",
    "lint": "eslint .",
    "fixlint": "eslint . --fix",
    "test": "jest --setupFiles dotenv/config --coverage --colors --verbose --detectOpenHandles --forceExit --passWithNoTests",
    "test:user": "jest test/User.api.spec.js --setupFiles dotenv/config --verbose --detectOpenHandles --forceExit",
    "test:activity-log": "jest test/ActivityLog.api.spec.js --setupFiles dotenv/config --verbose --detectOpenHandles --forceExit",
    "test:document": "jest test/Document.api.spec.js --setupFiles dotenv/config --verbose --detectOpenHandles --forceExit",
    "test:auth": "jest test/Auth.api.spec.js --setupFiles dotenv/config --verbose --detectOpenHandles --forceExit"
  },
  "author": "Nur Ali Rajab",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "firebase-admin": "^13.2.0",
    "fuse.js": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^6.10.1",
    "nodemon": "^3.1.9",
    "pg": "^8.14.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.1"
  }
}
